<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" 
      internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="logdir" value="${basedir}/logs" />
  <variable name="filelayout" 
            value="${date:format=HH\:mm\:ss} [${level:uppercase=true:padding=-5}]>_ ${message} ${onexception:${exception:format=tostring} ${newline} ${stacktrace} ${newline}"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
    <target name="debug" xsi:type="OutputDebugString" />
    <target name="cc" xsi:type="ColoredConsole" />
    <target name="file" xsi:type="File" encoding="utf-8" maxArchiveFiles="10" archiveAboveSize="10240000" 
            fileName="${logdir}/${shortdate}.log" layout="${filelayout}" />
    <target name="dicom" xsi:type="File" encoding="utf-8" maxArchiveFiles="10" archiveAboveSize="10240000"
            fileName="${logdir}/${shortdate}-dicom.log" layout="${filelayout}" />
    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <logger name="*" minlevel="Debug" writeTo="debug" />
    <logger name="Dicom.Imaging.Codec" minlevel="Debug" writeTo="dicom" />
    <logger name="Dicom.Network" minlevel="Debug" writeTo="dicom" />
    <logger name="Dicom.Printing" minlevel="Debug" writeTo="dicom" />
    <logger name="SimpleDICOMToolkit.Logging.LoggerService" minlevel="Debug" writeTo="file" />
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
  </rules>
</nlog>
